<Page x:Class="senia1._2.View.Pages.NextSevenDaysPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:senia1._2.View.Pages"
      xmlns:usercontrol="clr-namespace:senia1._2.View.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       Width="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Width}" 
      Height="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Height}"
      Title="NextSevenDaysPage">

    <Grid>
        <ScrollViewer Margin="0,3,4,3">
            <StackPanel Orientation="Vertical">
                <usercontrol:NextDay1Control/>
                <usercontrol:NextDay2Control/>
                <usercontrol:NextDay3Control/>
                <usercontrol:NextDay4Control/>
                <usercontrol:NextDay5Control/>
                <usercontrol:NextDay6Control/>
                <usercontrol:NextDay7Control/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
