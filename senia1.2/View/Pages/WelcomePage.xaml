<Page x:Class="senia1._2.View.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:senia1._2.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Width="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Width}" 
      Height="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Height}"
      Title="WelcomePage">

    <Grid>
        <DockPanel>
            <Label Height="150" DockPanel.Dock="Bottom"/>

            <Label
                DockPanel.Dock="Bottom"
                Content="Добро пожаловать! Чем хотите заняться?" 
                Foreground="{DynamicResource VioletBrush}"
                FontFamily="{DynamicResource BaseFont}"
                FontSize="{DynamicResource Big}" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" Margin="0,0,0,0" VerticalAlignment="Bottom" Height="44"
                />
            <ContentControl
                DockPanel.Dock="Top"
                VerticalAlignment="Stretch"
                Content="{DynamicResource Welcome}" Height="450" Width="850"/>
        </DockPanel>

    </Grid>
</Page>
